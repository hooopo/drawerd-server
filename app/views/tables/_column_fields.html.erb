<div class='nested-fields'>
  <div class="form-row">
    <div class="form-group col-md-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group col-md-3">
      <%= f.label :column_type %>
      <%= f.select :column_type, Column::TYPES, {}, class: 'form-control' %>
    </div>

    <div class="form-group col-md-3">
      <%= f.label :comment %>
      <%= f.text_field :comment, class: 'form-control' %>
    </div>

    <div class="form-group col-md-1">
      <%= f.label :nullable %>
      <%= f.select :nullable, [true, false], {}, class: 'form-control' %>
    </div>

    <div class="form-group col-md-1">
      <%= f.label :is_pk %>
      <%= f.select :is_pk, [false, true], {}, class: 'form-control' %>
    </div>

    <div class="form-group col-md-1">
      <%= f.label :remove %>
      <%= link_to_remove_association '<i class="material-icons">close</i>'.html_safe, f %>
    </div>
  </div>
</div>