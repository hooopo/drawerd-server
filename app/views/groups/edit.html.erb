<%= form_for([@project, @group], remote: true, authenticity_token: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <div class='input-group' id='group-color-picker'>
      <%= f.text_field :color, class: 'form-control' %>
      <span class="input-group-append">
        <span class="input-group-text colorpicker-input-addon"><i></i></span>
      </span>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-success', data: {disable_with: 'waiting...'} %>
  </div>
<% end %>

<script type="text/javascript">
  $(function () {
    $('#group-color-picker').colorpicker({"color": $("#group-color-picker input").val() || "#F7F8F9"});
  });
</script>