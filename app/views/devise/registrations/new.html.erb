<div class="layout-login-centered-boxed__form card" >
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :subdomain, class: 'text-label' %>
    <div class="input-group input-group-merge">
      <%= f.text_field :subdomain, autofocus: true, autocomplete: "subdomain", class: "form-control form-control-prepended" %>
      
      <div class="input-group-prepend">
        <div class="input-group-text">
          <span class="material-icons">people</span>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'text-label' %>
    <div class="input-group input-group-merge">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-prepended" %>
      
      <div class="input-group-prepend">
        <div class="input-group-text">
          <span class="material-icons">email</span>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="d-flex justify-content-between">
      <%= f.label :password, class: 'text-label' %>
      <% if @minimum_password_length %>
        <small><em>(<%= @minimum_password_length %> characters minimum)</em></small>
      <% end %>
    </div>
    <div class="input-group input-group-merge">
      <%= f.password_field :password, autofocus: true, autocomplete: false, class: "form-control form-control-prepended" %>
      
      <div class="input-group-prepend">
        <div class="input-group-text">
          <span class="material-icons">vpn_key</span>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'text-label' %>
    <div class="input-group input-group-merge">
      <%= f.password_field :password_confirmation, autofocus: true, autocomplete: false, class: "form-control form-control-prepended" %>
      
      <div class="input-group-prepend">
        <div class="input-group-text">
          <span class="material-icons">vpn_key</span>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: 'btn btn-block btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
