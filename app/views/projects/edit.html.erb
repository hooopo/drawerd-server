<div class="container-fluid page__container">

  <div class="card card-form">
    <div class="row no-gutters">
      
      <div class="col-lg-12 card-form__body card-body">
        <%= form_for(@project) do |f| %>
          <div class="form-group">
            <%= f.label :bg_color %>
            <div class='input-group' id='bg-color-picker'>
              <%= f.text_field :bg_color, class: 'form-control' %>
              <span class="input-group-append">
                <span class="input-group-text colorpicker-input-addon"><i></i></span>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :table_header_color %>
            <div class='input-group' id='table-header-color-picker'>
              <%= f.text_field :table_header_color, class: 'form-control' %>
              <span class="input-group-append">
                <span class="input-group-text colorpicker-input-addon"><i></i></span>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :table_body_color %>
            <div class='input-group' id='table-body-color-picker'>
              <%= f.text_field :table_body_color, class: 'form-control' %>
              <span class="input-group-append">
                <span class="input-group-text colorpicker-input-addon"><i></i></span>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :arrow_color %>
            <div class='input-group' id='arrow-color-picker'>
              <%= f.text_field :arrow_color, class: 'form-control' %>
              <span class="input-group-append">
                <span class="input-group-text colorpicker-input-addon"><i></i></span>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit 'Submit', class: 'btn btn-success', data: {disable_with: 'waiting...'} %>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>